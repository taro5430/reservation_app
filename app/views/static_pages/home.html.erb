<div class="top">
  <div class="top-main">
    <div class="container">
      <div class="row col-lg-6">
        <div class="form-fream">
          <div class="form-area">
            <p class="form-area-title mb-4">Potepan Shareでまだ体験したことのない旅をしよう</p>
            <%= form_with url:rooms_search_path,method: :get, local: true do |f| %>
              <%= f.label :address,"エリア",class:"label" %>
              <%= f.text_field :address, class:"form-control mb-4", placeholder:"東京" %>
              <%= f.submit "探す", name: nil, class:"form-control btn-primary mb-4" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>  
  </div>  
  
  <div class="container">
    <div class="panel-area m-5">
      <h1 class="section-title">おすすめのエリア</h1>
      <div class="row">
        <div class="panel-item col-lg-3 col-6">
          <span>東京</span>
          <%= link_to rooms_search_path(address:"東京") do %>
            <%= image_tag 'tokyo.jpg', class: "panel-image" %>
          <% end %>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>大阪</span>
          <%= link_to rooms_search_path(address:"大阪") do %>
            <%= image_tag 'osaka.jpg', class: "panel-image" %>
          <% end %>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>京都</span>
          <%= link_to rooms_search_path(address:"京都") do %>
            <%= image_tag 'kyoto.jpg', class: "panel-image" %>
          <% end %>
        </div>
        <div class="panel-item col-lg-3 col-6">
          <span>札幌</span>
          <%= link_to rooms_search_path(address:"札幌") do %>
            <%= image_tag 'sapporo.jpg', class: "panel-image" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>  
